<div class="blog-card">
	<div class="blog-card-content">
		<h2 class="blog-card-content-header">{{ auteur.name }}</h2>
		{% if app.request.get('_route') == 'admin.auteur.index' %}
			<div class="d-flex justify-content-between align-items-center">
				<a href="{{ path('admin.auteur.update', {id: auteur.id}) }}" class="btn btn-warning">
					<i class="bi bi-pencil-square"></i>
					Modifier
				</a>
				{% include 'backend/auteur/_deleteForm.html.twig' %}
			</div>
		{% endif %}
	</div>
</div>
