<div class="blog-card">
	<div class="blog-card-content">
		<h2 class="blog-card-content-header"><a href="{{ path('admin.livre.show', {id: livre.id}) }}">{{ livre.name }}</a></h2>
        <p><b>Auteur : </b>{{ livre.auteur.name }}</p>
        <div>
            <b>Cat√©gorie : </b>  
            {% for categorie in livre.categories %}
                <span class="badge bg-primary"> {{ categorie.name }} </span>
            {% endfor %}
        </div>
        <p><b>Description : </b> {{ livre.description }}</p>
		{% if app.request.get('_route') == 'admin.livre.index' %}
			<div class="d-flex justify-content-between align-items-center">
				<a href="{{ path('admin.livre.update', {id: livre.id}) }}" class="btn btn-warning">
					<i class="bi bi-pencil-square"></i>
					Modifier
				</a>
				{% include 'backend/livre/_deleteForm.html.twig' %}
			</div>
		{% endif %}
	</div>
</div>